<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.firestudio.projectgmda">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/gmda"
        android:label="@string/app_name"
        android:roundIcon="@drawable/gmda"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjectGmda">
        <activity android:name=".ui.FetchLayerActivity"/>
        <activity android:name=".ui.MapActivity" />
        <activity android:name=".ui.MobileOtpVerificationActivity" />
        <activity android:name=".ui.LoginActivity" />
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/SplashTheme" >
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity android:name=".ui.MainActivity">
        </activity>
    </application>

</manifest>